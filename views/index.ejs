<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Chess Game</title>
    <link rel="icon" type="image/png" href="/media/rookwhite.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .chessboard {
            display: grid;
            grid-template-columns: repeat(8, minmax(0, 1fr));
            grid-template-rows: repeat(8, minmax(0, 1fr));
            width: 450px; /* Default desktop width */
            height: 450px; /* Default desktop height */
            transform: rotate(0deg);
        }

        @media (max-width: 768px) { /* Tablet */
            .chessboard {
                width: 350px; /* Adjust width for tablets */
                height: 350px; /* Adjust height for tablets */
            }
        }

        @media (max-width: 640px) { /* Mobile */
            .chessboard {
                width: 300px; /* Adjust width for mobile */
                height: 300px; /* Adjust height for mobile */
            }

            .sidebar {
                display: none; /* Hide sidebar on mobile by default */
                transition: transform 0.3s ease, visibility 0.3s ease;
                transform: translateX(-100%);
                visibility: hidden;
            }

            .sidebar.active {
                display: block;
                transform: translateX(0);
                visibility: visible;
            }
        }

        #hamburger {
            transition: transform 0.3s ease;
        }

        #hamburger.open {
            transform: rotate(90deg);
        }

        .piece.white {
            color: white;
            filter: drop-shadow(0 0 2px rgba(0, 0, 0, 1));
        }

        .piece.black {
            color: black;
        }

        .flipped {
            transform: rotate(180deg);
        }

        .square {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .square.light {
            background-color: #f0d9b5;
        }

        .square.dark {
            background-color: #b58863;
        }

        .piece {
            font-size: 36px;
            cursor: pointer;
            color: inherit;
            font-family: 'Arial Unicode MS', 'DejaVu Sans', sans-serif;
        }

        .piece.pawn {
            font-size: 2em;
        }

        .piece.draggable {
            cursor: grab;
        }

        .dragging {
            opacity: 0.5;
        }

        .flipped .piece {
            transform: rotate(180deg);
        }

        .player-role {
            text-align: center;
            margin-top: 10px;
            font-size: 18px;
            color: #f0d9b5; /* Light color to match chessboard */
        }
    </style>
</head>
